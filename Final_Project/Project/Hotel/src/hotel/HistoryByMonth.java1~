    private void createPopup()
    {
        JPopupMenu popup = new JPopupMenu();
        JMenuItem myMenuItem1 = new JMenuItem("View Full Details");
        JMenuItem myMenuItem2 = new JMenuItem("Do Nothing");
        myMenuItem1.addActionListener(this);
        myMenuItem2.addActionListener(this);
        popup.add(myMenuItem1);
        popup.add(myMenuItem2);
        MouseListener popupListener = new PopupListener(popup,tblHistory);
        tblHistory.addMouseListener(popupListener);
    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getActionCommand().equals("View Full Details"))
        {
            FullDetails fd = new FullDetails("Complete Details");
            fd.displayDetails((Integer)dm.getValueAt(tblHistory.getSelectedRow(),0));
        }else if (e.getSource() == btnView)
        {
            viewDetails(yearpicker.getYear(), monthpicker.getMonth()+1);
        }
    }
    
    
    private void viewDetails(int yr,int mon) {
        dm.setRowCount(0);
       Connection conn = DbConnection.getConnection();
        try {
            Statement stat = conn.createStatement();
            ResultSet rs = stat.executeQuery("select * from reservation_history,guest where guest.id = reservation_history.guest_id");
            while (rs.next()) {
                Date checkin = rs.getDate("check_in");
                Date checkout = rs.getDate("check_out");
                Calendar cal = Calendar.getInstance();
                cal.setTime(checkin);
                int chkin_yr = cal.get(Calendar.YEAR);
                int chkin_mon = cal.get(Calendar.MONTH)+1;
                
                cal.setTime(checkout);
                int chkout_yr =  cal.get(Calendar.YEAR);
                int chkout_mon = cal.get(Calendar.MONTH)+1;
                if ((yr >= chkin_yr && yr <= chkout_yr) && (mon >= chkin_mon && mon <= chkout_mon)) {
                    dm.addRow(new Object[]{rs.getInt("reservation_id"),rs.getInt("guest_id"),rs.getString("f_name")+" "+ rs.getString("l_name"),rs.getString("rooms"),
                    rs.getInt("num_of_guests"),rs.getDate("check_in"),rs.getDate("check_out"),rs.getInt("total_paid")});
                }
            }
        } catch (SQLException ex) {
            Logger.getLogger(HistoryAll.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
}
