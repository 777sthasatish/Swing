    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == btnExit)
        {
            this.dispose();
        }
        else if (e.getSource() == btnPrint){
            try {
                boolean p = taDetails.print();
                if (p)
                {
                    JOptionPane.showMessageDialog(null, "Print Succesfull");
                }
                else
                {
                    JOptionPane.showMessageDialog(null, "Sorry!!!! Couldn't print document");
                }
            } catch (PrinterException ex) {
                Logger.getLogger(FullDetails.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }
}
