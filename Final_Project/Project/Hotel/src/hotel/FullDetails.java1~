    }
    
    public void displayDetails(int res_id)
    {
        System.out.println(res_id+" ");
        taDetails.setText("Reservation ID \t:\t"+res_id);
        Connection conn = DbConnection.getConnection();
        try
        {
            PreparedStatement stat = conn.prepareStatement("select * from reservation_history where reservation_id = ?");
            stat.setInt(1, res_id);
            ResultSet rs = stat.executeQuery();
            while (rs.next())
            {
                taDetails.setText("Reservation ID \t:\t"+rs.getInt(1));
                
            }
        }catch(Exception e){}
    }

